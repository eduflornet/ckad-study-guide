FROM ubuntu:22.04

# Running as root (BAD)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    wget \
    sudo \
    vim

# Install packages globally
RUN pip3 install flask requests

# Copy everything
COPY . /app

# Set world-writable permissions (BAD)
RUN chmod 777 /app

WORKDIR /app

# Running as root user (BAD)
CMD ["python3", "app.py"]
